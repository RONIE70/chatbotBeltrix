<?php
// coneccion a la base 
$conn = mysqli_connect("localhost", "root", "", "bot") or die("Database Error");

// traigo mensaje con ajax
$getMesg = mysqli_real_escape_string($conn, $_POST['text']);

//check user con base
$check_data = "SELECT respuestas FROM chatbot WHERE preguntas LIKE '%$getMesg%'";
$run_query = mysqli_query($conn, $check_data) or die("Error");

// si la consulta del usuario coincide con la consulta de la base de datos, mostraremos la respuesta; de lo contrario, ir치 a otra declaraci칩n
if(mysqli_num_rows($run_query) > 0){
    //recuperando la reproducci칩n de la base de datos de acuerdo con la consulta del usuario
    $fetch_data = mysqli_fetch_assoc($run_query);
    //almacenando la reproducci칩n en una variable que enviaremos a ajax
    $replay = $fetch_data['respuestas'];
    echo $replay;
}else{
    echo "Disculpa, no entendi!";
}

?>